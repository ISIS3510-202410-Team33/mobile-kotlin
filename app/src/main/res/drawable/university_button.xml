<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Configurar el borde -->
            <stroke
                android:width="1dp"
                android:color="#424242" /> >

            <!-- Configurar el fondo -->
            <gradient
                android:startColor="#FFCD2A"
                android:endColor="#FAFF00"
                android:angle="45" />

            <!-- Configurar las esquinas redondeadas -->
            <corners
                android:radius = "45dp" />
        </shape>
    </item>
</selector>

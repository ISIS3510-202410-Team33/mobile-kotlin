<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Configurar el borde -->
            <stroke
                android:width="1dp"
                android:color="#424242" /> >

            <!-- Configurar el fondo -->
            <gradient
                android:startColor="@color/material_dynamic_neutral20"
                android:endColor="#16171B"
                android:angle="95" />

            <!-- Configurar las esquinas redondeadas -->
            <corners
                android:radius="45dp"/>
        </shape>
    </item>
</selector>
